
<%= simple_form_for @doc do |f| %>
	<%= f.input :original, as: :boolean, checked_value: true, unchecked_value: false %>
	<%= f.association :type, collection: Type.all() %>
	<%= f.input :country, selected: "RU" %>		
	<%= f.input :series %>
	<%= f.input :number %>
	<%= f.input :unit %>

	<div class="input-group" >
		<%= f.input  :where, as: :email, input_html:{class:"form-control date_pick"}%>
	</div>
	<%= f.input :issued_by %>
	<div class="input-group" >
		<%= f.input  :birthday, as: :email, input_html:{class:"form-control date_pick"}%>
	</div>	
	<%= f.button :submit %>
<% end %>
